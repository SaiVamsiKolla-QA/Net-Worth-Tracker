{
    "name": "networth-tracker",
    "version": "1.0.0",
    "homepage": "https://SaiVamsiKolla-QA.github.io/Net-Worth-Tracker",
    "description": "A modern net worth tracker built with React, TypeScript, and OOP principles. Features asset/liability management, financial projections, dark mode, and Chart.js visualizations. Demonstrates SOLID design patterns with 70%+ test coverage.",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "predeploy": "npm run build",
        "deploy": "gh-pages -d dist",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint . --ext .ts,.tsx",
        "lint:fix": "eslint . --ext .ts,.tsx --fix",
        "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
        "type-check": "tsc --noEmit",
        "ci": "npm run type-check && npm run lint && npm test && npm run build"
    },
    "dependencies": {
        "chart.js": "^4.4.0",
        "react": "^18.3.1",
        "react-chartjs-2": "^5.2.0",
        "react-dom": "^18.3.1",
        "react-router-dom": "^6.26.0",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/jest": "^29.5.11",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@types/uuid": "^9.0.7",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "@vitejs/plugin-react": "^4.2.1",
        "eslint": "^8.57.1",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^17.1.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jsx-a11y": "^6.8.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "gh-pages": "^6.1.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "prettier": "^3.2.4",
        "ts-jest": "^29.1.1",
        "typescript": "^5.3.3",
        "vite": "^7.1.10"
    },
    "keywords": [
        "networth",
        "finance",
        "tracker",
        "react",
        "typescript",
        "oop",
        "solid-principles",
        "testing",
        "vite",
        "chart-js",
        "dark-mode",
        "github-pages"
    ],
    "author": "Sai Vamsi Kolla",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/SaiVamsiKolla-QA/Net-Worth-Tracker.git"
    },
    "bugs": {
        "url": "https://github.com/SaiVamsiKolla-QA/Net-Worth-Tracker/issues"
    }
}
